{
  "name": "mdview.nvim",
  "version": "0.1.0",
  "private": true,
  "description": "Browser-based Markdown preview for Neovim (mdview.nvim)",
  "author": "Stefan Bartl",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server:tsc": "tsc -w -p tsconfig.server.json",
    "dev:server:node": "nodemon --watch dist --ext js --exec \"node dist/server/index.js\"",
    "dev:server": "concurrently --kill-others \"npm:dev:server:tsc\" \"npm:dev:server:node\"",
    "dev:client": "vite --config src/client/vite.config.ts",
    "start": "node ./dist/server/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json && esbuild src/server/index.ts --bundle --platform=node --outfile=dist/server/index.js --target=node18",
    "build:client": "vite build --config src/client/vite.config.ts",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md,css,scss}\"",
    "test": "vitest run",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.6",
    "micromatch": "^4.0.8",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.5.1",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
